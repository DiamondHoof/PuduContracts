{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "strictPropertyInitialization": true,
    "rootDirs": ["./src", "./scripts", "./test"]
  },
  "include": ["./src", "./scripts"],
  "files": ["./hardhat.config.ts"]
}
